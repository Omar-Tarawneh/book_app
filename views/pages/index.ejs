<!DOCTYPE html>
<html lang="en">
<%- include('../layout/head.ejs') %>

    <body>
        <%- include('../layout/header.ejs') %>
            <main>
                <legend>
                    <%= number%> Saved Books
                </legend>
                <section id='book'>
                    <% booksArray.forEach(element=>{%>
                        <div class="bookDiv">
                            <img class="bookImg" src="<%= element.img%>" alt="">
                            <h2 class="Tilte">
                                <%= element.title%>
                            </h2>
                            <p class="Author">
                                <%= element.author%>
                            </p>
                            <button class="detail-button" type="submit"><a href="/books/<%= element.id%>">View
                                    Details</a></button>
                        </div>
                        <%});%>
                </section>

            </main>
            <%- include('../layout/footer.ejs') %>
    </body>
    <script src="/public/js/app.js"></script>

</html>


</html>