<!DOCTYPE html>
<html lang="en">

<%- include('../layout/head.ejs') %>

    <body>
        <%- include('../layout/header.ejs') %>
            <main>
                <legend>Result</legend>
                <section id='book'>
                    <% booksArray.forEach(element=>{%>
                        <div class="bookDiv">
                            <img class="bookImg" src="<%= element.img%>" alt="">
                            <h2 class="Tilte">
                                <%= element.title%>
                            </h2>
                            <p class="Author">
                                <%= element.author%>
                            </p>
                            <p class="description">
                                <%= element.description%>
                            </p>
                            <form action="/books" method="POST">
                                <input style="display: none;" type="text" name='title' value="<%= element.title%>">
                                <input style="display: none;" type="text" name='author' value="<%= element.author%>">
                                <input style="display: none;" type="text" name='description'
                                    value="<%= element.description%>">
                                <input style="display: none;" type="text" name='img' value="<%= element.img%>">
                                <button type="submit" class="select">Select This Book</button>
                            </form>
                        </div>
                        <%});%>
                </section>

            </main>
            <script src="/public/js/app.js"></script>
    </body>

</html>